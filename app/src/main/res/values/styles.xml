<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="trip_name_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">@color/title_text_custom_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="amenity_style">
        <item name="android:drawableTop">@drawable/ic_baseline_wifi_24</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="filter_title_text">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/fliter_title_text_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="feature_toggle_btn_text">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/fliter_title_text_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="card_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="payment_style">
        <item name="android:textColor">@color/subtitle_text_custom_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="customBlackButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint" >@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/filter_background_grey</item>
    </style>
    <style name="FriendlyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTitle</item>

    </style>

    <style name="saved_list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="no_chat_img_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="error_img_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="companion_blue_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blue_fb</item>
    </style>

    <style name="companion_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="companion_text" parent="title_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="companion_btn" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textColor">@color/subtitle_text_custom_color</item>
    </style>
    <style name="price_range_slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <item name="colorOnSurface">@color/purple_200</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/purple_200</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/title_text_custom_color</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="filter_button_style" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/ic_outline_cancel_24</item>
        <item name="android:textColor">@color/filter_background_grey</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="congratulation_dialog_theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/title_text_custom_color</item>
    </style>
</resources>